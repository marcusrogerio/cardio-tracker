<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow android:layout_margin="15dp">

                <TextView
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="Min HR"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_hr_min"
                    android:layout_margin="10dp"
                    android:inputType="number"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow android:layout_margin="15dp">

                <TextView
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="Max HR"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_hr_max"
                    android:layout_margin="10dp"
                    android:inputType="number"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow android:layout_margin="15dp">

                <TextView
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="@string/target_duration"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_duration"
                    android:layout_margin="10dp"
                    android:inputType="number"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow android:layout_margin="15dp">

                <TextView
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="@string/target_distance"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_distance"
                    android:layout_margin="10dp"
                    android:inputType="number"
                    android:textSize="18sp" />
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/bt_start_new_workout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Start new workout" />

    </LinearLayout>
</ScrollView>
